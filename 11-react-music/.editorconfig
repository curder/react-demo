# https://editorconfig.org

root = true

[*] # 所有文件适用
charset = utf-8 # 字符集 utf-8
indent_style = space # 缩进风格 空格
indent_size = 2 # 缩进大小 2
end_of_line = lf # 行尾换行符类型
trim_trailing_whitespace = true # 去除行尾空格
insert_final_newline = true # 插入最后一行空行

[*.md] # markdown 文件适用
max_line_length = off # 最大行长度
trim_trailing_whitespace = false # 不去除行尾空格